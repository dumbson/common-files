updev()
{
    sudo nginx
    /mongo/mongodb/bin/mongod --dbpath /mongo/data --logpath /mongo/logs/mongo.log --fork
    mysql.server start                        
}

downdev()
{
    sudo nginx -s quit
    kill $(cat /mongo/data/mongod.lock)
    mysql.server stop
}

gpd()
{
    git pull --rebase origin master 
    git push origin master
    if [ "$1" = "i" ]
    then
        cap intg deploy
    fi
}

gpc()
{
    git commit -m $1
    git pull --rebase origin master 
    git push origin master
    if [ "$2" = "i" ]
    then
        cap intg deploy
    fi
}

gpa()
{
    git commit -am "$1"
    git pull --rebase origin master 
    git push origin master
    if [ "$2" = "i" ]
    then
        cap intg deploy
    fi
}

